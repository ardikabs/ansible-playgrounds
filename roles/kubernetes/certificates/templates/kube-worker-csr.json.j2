{
  "CN": "system:node:{{ansible_default_ipv4.address}}",
  "hosts": [
    "{{ansible_default_ipv4.address}}",
    "127.0.0.1",
    {% if external_ip %}{{ external_ip }}{% endif %}
  ],
  "key": {
    "algo": "rsa",
    "size": 2048
  },
  "names": [
    {
      "C": "{{ TLS_C }}",
      "L": "{{ TLS_L }}",
      "O": "system:nodes",
      "OU": "{{ TLS_OU }}",
      "ST": "{{ TLS_ST }}"
    }
  ]
}
